
<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="#">Clientes</a>
  </li>
  <li class="breadcrumb-item active">Meus Clientes</li>
</ol>

<div class="card mb-3">
  <div class="card-body">
  <div class="table-responsive">
   <table class="table table-bordered table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
    <thead class="text-center">
    <tr>
      <th> ID </th>
      <th>CPF</th>
      <th>Nome</th>
      <th>Telefone</th>
      <th>Email</th>
      <th>#</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
      
        <td><%= client.id %> </td>
        <td><%= link_to client.cpf_cnpj, 'https://www.receita.fazenda.gov.br/Aplicacoes/SSL/ATCTA/CPF/ConsultaSituacao/ConsultaPublica.asp'%></td>
        <td><%=  client.name %></td>
        <td><%= client.phone1 %></td>
        <td><%= client.email %></td>
        <td class='text-center  '> <%= link_to '', client , class:'btn  btn-warning fa fa-eye' %>    </td>
      
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
<br>

<%= link_to 'Novo Cliente', new_client_path, class:'btn btn-primary' %>
</div>