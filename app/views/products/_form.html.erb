<div class='col-md-6'>

<%= form_with(model: product, local: true,) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <%= form.label :suppier_id %>
    <%= form.collection_select :supplier_id, Supplier.all, :id, :name, {prompt: true}, {class: 'form-control'} %>
  </div>

  <div class="form-row">
    <%= form.label :cod_prod %>
    <%= form.text_field :cod_prod, id: :product_cod_prod , class: 'form-control'%>
  </div>

  <div class="form-row">
    <%= form.label :name %>
    <%= form.text_field :name, id: :product_name, class: 'form-control' %>
  </div>

  <div class="form-row">
        
    <%= form.label 'Cagetory' %>
    <%= form.collection_select :category_id, Category.all, :id, :name, {prompt: true}, {class: 'form-control'} %>
    
     
    

  </div>

  

  <div class="form-row">
    <%= form.label :buy_price %>
    <%= form.text_field :buy_price, id: :product_buy_price, class: 'form-control' %>
  </div>

  <div class="form-row">
    <%= form.label :sell_price %>
    <%= form.text_field :sell_price, id: :product_sell_price , class: 'form-control'%>
  </div>

  <div class="form-row">
    <%= form.label :amount %>
    <%= form.number_field :amount, id: :product_amount, class: 'form-control' %>
  </div>

  <div class="form-row">
    <%= form.label :status %>
    <%= form.text_field :status, id: :product_status, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>