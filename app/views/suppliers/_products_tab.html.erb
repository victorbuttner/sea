<div class='card'>

<div class='card-body'>
<% if @products.nil? %> 
<p> Não existem produtos para este fornecedor ainda </p>
<%else%>
<table class="table table-bordered table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
    <thead class="text-center">
      <tr>
        <th>Fornecedor</th>
        <th>Código</th>
        <th>Nome</th>
        <th>Categoria</th>
        <th>Valor</th>
        <th>Quantidade</th>
        <th> #</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.supplier.name %></td>
          <td><%= product.cod_prod %></td>
          <td><%= product.name %></td>
          <td><%= product.category.name %></td>
          <td><%= number_to_currency(product.sell_price) %></td>
          <td><%= product.amount %></td>
          <td class='text-center  '> <%= link_to '', product , class:'btn  btn-warning fa fa-eye' %>    </td>
         
        </tr>
      <% end %>
    </tbody>
  </table>
<%end%>

</div>
</div>