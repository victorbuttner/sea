
<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="#">Dashboard</a>
  </li>
  <li class="breadcrumb-item active">Bem Vindo <%= current_user.name%> </li>
</ol>


<!-- Icon Cards-->
    <% if current_user.try(:superadmin_role?) || current_user.try(:supervisor_role?) %>
      <div class="row">
        <div class="col-xl-3 col-sm-6 mb-3">
          <div class="card text-white bg-primary o-hidden h-100">
            <div class="card-body">
              <div class="card-body-icon">
                <i class="fa fa-fw fa-user-plus"></i>
              </div>
              <div class="mr-5"><%= @new_clients %> Clientes !</div>
            </div>
        </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
          <div class="card text-white bg-warning o-hidden h-100">
            <div class="card-body">
              <div class="card-body-icon">
                <i class="fa fa-fw fa-shopping-bag"></i>
              </div>
              <div class="mr-5"><%= @new_products%> Produtos!</div>
            </div>
             </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
          <div class="card text-white bg-success o-hidden h-100">
            <div class="card-body">
              <div class="card-body-icon">
                <i class="fa fa-fw fa-shopping-cart"></i>
              </div>
              <div class="mr-5"><%= @orders.size%> Vendas!</div>
            </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
          <div class="card text-white bg-danger o-hidden h-100">
            <div class="card-body">
              <div class="card-body-icon">
                <i class="fa fa-fw fa-barcode"></i>
              </div>
              <div class="mr-5"><%= @new_payments%>  Pagamentos!</div>
            </div>

          </div>
        </div>
      </div>
      <%end%>
      <div class="row">
<div class="col-md-6 ">
<div class="card text-center">
  <div class="card-header">
    Resumo de vendas
  </div>
  <div class="card-body">
    <%= column_chart Order.group_by_day_of_week(:created_at, format: "%a").count %>
  </div>
  <div class="card-footer text-muted">
    ultimos 7 dias
  </div>
</div>
</div>
<div class="col-md-6 ">
<div class="card text-center">
  <div class="card-header">
    Produtos vs Categorias
  </div>
  <div class="card-body">
  <%= pie_chart  Category.joins(:products).group(:name).count %>
  </div>
  <div class="card-footer text-muted">
    Quantidade de produtos por categoria
  </div>
</div>

</div>
</div>